<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane alignment="CENTER" prefHeight="400" prefWidth="600" style="-fx-background-color: rgba(0, 0, 0, 0.5);;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" spacing="20">
      <ImageView fx:id="PlayContinue" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#onPlayContinue" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
         <image>
            <Image url="@images/startbutton.png" />
         </image>
      </ImageView>
      <ImageView fx:id="ReturnMenu" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#onReturnMenu" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
         <image>
            <Image url="@images/exitbutton.png" />
         </image>
      </ImageView>
    </VBox>
</StackPane>
