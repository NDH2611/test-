<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane alignment="CENTER" prefHeight="400" prefWidth="600" style="-fx-background-color: rgba(0, 0, 0, 0.5);;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" spacing="20">
        <Text fill="#00c3ff" strokeType="OUTSIDE" strokeWidth="0.0" text="Wanna play again?" />
      <ImageView fx:id="PlayContinue" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#onRestartGame" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
         <image>
            <Image url="@images/startbutton.png" />
         </image>
      </ImageView>
      <ImageView fx:id="Leaderboard" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#onViewLeaderboard" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
         <image>
            <Image url="@images/boardbutton.png" />
         </image>
      </ImageView>
      <ImageView fx:id="ReturnMenu" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#onReturnMenu" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
         <image>
            <Image url="@images/exitbutton.png" />
         </image>
      </ImageView>
    </VBox>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
</StackPane>
